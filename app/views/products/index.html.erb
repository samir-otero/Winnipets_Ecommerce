<% content_for :title, "Shop Premium Pet Supplies - Winnipets" %>

<section class="py-5 bg-winnipets-light" id="products">
  <div class="container">
    <!-- Hero Section for Product Pages -->
    <div class="row mb-5">
      <div class="col-12">
        <div class="text-center">
          <h1 class="display-5 fw-bold text-winnipets-primary mb-3">
            <% if @selected_category %>
              <i class="bi bi-tag-fill me-2"></i><%= @selected_category.name %>
            <% elsif params[:search].present? %>
              <i class="bi bi-search me-2"></i>Search Results
            <% else %>
              <i class="bi bi-grid-3x3-gap-fill me-2"></i>All Products
            <% end %>
          </h1>

          <% if params[:search].present? %>
            <div class="alert alert-info d-inline-block">
              <i class="bi bi-info-circle me-2"></i>
              Showing results for "<strong><%= params[:search] %></strong>"
              <%= link_to "Clear search", products_path(category_id: params[:category_id]),
                         class: "btn btn-outline-info btn-sm ms-2" %>
            </div>
          <% end %>

          <% if @selected_category&.description.present? %>
            <p class="lead text-muted mt-3"><%= @selected_category.description %></p>
          <% else %>
            <p class="lead text-muted mt-3">Quality pet supplies designed for Manitoba's unique climate</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Filters and Sort Options -->
    <div class="row mb-4">
      <div class="col-lg-6 col-md-8 mb-3">
        <div class="card shadow-sm border-0">
          <div class="card-body py-3">
            <%= form_with url: products_path, method: :get, local: true, class: "d-flex align-items-center flex-wrap gap-3" do |form| %>
              <%= form.hidden_field :search, value: params[:search] %>
              <%= form.hidden_field :filter, value: params[:filter] %>

              <div class="d-flex align-items-center">
                <label class="form-label mb-0 me-2 fw-semibold text-winnipets-primary">Category:</label>
                <%= form.select :category_id,
                               options_from_collection_for_select(@categories, :id, :name, params[:category_id]),
                               { prompt: "All Categories" },
                               { class: "form-select", onchange: "this.form.submit();", style: "min-width: 200px;" } %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-lg-6 col-md-4 text-md-end mb-3">
        <div class="card shadow-sm border-0">
          <div class="card-body py-3">
            <div class="d-flex justify-content-end align-items-center">
              <span class="me-3 fw-semibold text-winnipets-primary">Filter:</span>
              <div class="btn-group" role="group" aria-label="Product filters">
                <%= link_to "All", products_path(search: params[:search], category_id: params[:category_id]),
                           class: "btn btn-sm #{'btn-primary' if params[:filter].blank?} #{'btn-outline-primary' unless params[:filter].blank?}" %>
                <%= link_to "On Sale", products_path(search: params[:search], category_id: params[:category_id], filter: 'on_sale'),
                           class: "btn btn-sm #{'btn-primary' if params[:filter] == 'on_sale'} #{'btn-outline-primary' unless params[:filter] == 'on_sale'}" %>
                <%= link_to "New", products_path(search: params[:search], category_id: params[:category_id], filter: 'new'),
                           class: "btn btn-sm #{'btn-primary' if params[:filter] == 'new'} #{'btn-outline-primary' unless params[:filter] == 'new'}" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Products Grid -->
    <% if @products.any? %>
      <div class="row g-4">
        <% @products.each do |product| %>
          <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
            <div class="card h-100 shadow-winnipets product-card">
              <!-- Product Image Container -->
              <div class="position-relative overflow-hidden">
                <% if product.images.attached? %>
                  <%= link_to product_path(product), class: "text-decoration-none" do %>
                    <%= image_tag product.images.first,
                        class: "card-img-top",
                        style: "height: 250px; object-fit: cover;",
                        alt: product.name,
                        loading: "lazy" %>
                  <% end %>
                <% else %>
                  <div class="card-img-top d-flex align-items-center justify-content-center bg-light"
                       style="height: 250px;">
                    <div class="text-center text-muted">
                      <i class="bi bi-image display-4 mb-2"></i>
                      <p class="small mb-0">No image available</p>
                    </div>
                  </div>
                <% end %>

                <!-- Sale and New Badges -->
                <div class="position-absolute top-0 end-0 m-2">
                  <% if product.respond_to?(:on_sale?) && product.on_sale? %>
                    <span class="badge bg-danger fs-6 me-1">
                      <i class="bi bi-percent me-1"></i>Sale
                    </span>
                  <% end %>
                  <% if product.respond_to?(:new?) && product.new? %>
                    <span class="badge bg-success fs-6">
                      <i class="bi bi-star-fill me-1"></i>New
                    </span>
                  <% end %>
                </div>

                <!-- Quick View Overlay (appears on hover) -->
                <div class="position-absolute top-50 start-50 translate-middle opacity-0 transition-opacity"
                     style="transition: opacity 0.3s ease;">
                  <%= link_to "Quick View", product_path(product),
                             class: "btn btn-winnipets-secondary btn-sm" %>
                </div>
              </div>

              <div class="card-body d-flex flex-column p-3">
                <!-- Category Tag -->
                <div class="mb-2">
                  <span class="badge bg-secondary bg-opacity-10 text-winnipets-secondary">
                    <i class="bi bi-tag me-1"></i><%= product.category.name %>
                  </span>
                </div>

                <!-- Product Name -->
                <h5 class="card-title">
                  <%= link_to product.name, product_path(product),
                             class: "text-decoration-none text-winnipets-primary stretched-link" %>
                </h5>

                <!-- Price -->
                <div class="mb-3">
                  <% if product.respond_to?(:on_sale?) && product.on_sale? %>
                    <span class="h5 text-danger fw-bold sale-price">
                      <%= number_to_currency(product.sale_price) %>
                    </span>
                    <span class="text-muted text-decoration-line-through ms-2 original-price">
                      <%= number_to_currency(product.price) %>
                    </span>
                    <div class="small text-success mt-1">
                      <i class="bi bi-arrow-down me-1"></i>
                      Save <%= number_to_currency(product.price - product.sale_price) %>
                    </div>
                  <% else %>
                    <span class="h5 fw-bold price"><%= number_to_currency(product.price) %></span>
                  <% end %>
                </div>

                <!-- Description -->
                <p class="card-text text-muted small flex-grow-1">
                  <%= truncate(product.description, length: 85) %>
                </p>

                <!-- Stock Status and Actions -->
                <div class="mt-auto">
                  <% if product.stock_quantity > 0 %>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                      <small class="text-success d-flex align-items-center">
                        <i class="bi bi-check-circle-fill me-1"></i>
                        <span class="fw-semibold">In Stock</span>
                        <span class="ms-1 text-muted">(<%= product.stock_quantity %>)</span>
                      </small>

                      <% if product.stock_quantity <= 5 %>
                        <small class="text-warning">
                          <i class="bi bi-exclamation-triangle-fill me-1"></i>Only <%= product.stock_quantity %> left!
                        </small>
                      <% end %>
                    </div>

                    <!-- Add to Cart Form -->
                    <%= form_with url: add_item_cart_path(product), method: :post,
                                 local: false, class: "position-relative" do |form| %>
                      <%= form.hidden_field :quantity, value: 1 %>
                      <%= form.submit "Add to Cart",
                                     class: "btn btn-primary w-100 fw-semibold",
                                     data: { disable_with: "Adding..." } %>
                    <% end %>
                  <% else %>
                    <div class="text-center py-2">
                      <p class="text-danger mb-2 small fw-semibold">
                        <i class="bi bi-x-circle-fill me-1"></i> Out of Stock
                      </p>
                      <button class="btn btn-outline-secondary w-100" disabled>
                        <i class="bi bi-bell me-1"></i>Notify When Available
                      </button>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Results Count -->
      <div class="row mt-4">
        <div class="col-12">
          <div class="text-center text-muted">
            <p class="mb-0">
              Showing <%= @products.count %> of <%= @products.total_count %> products
            </p>
          </div>
        </div>
      </div>

      <!-- Pagination -->
      <%= render 'shared/pagination', paginated_collection: @products, model_name: 'product' %>

    <% else %>
      <!-- No Products Found -->
      <div class="row">
        <div class="col-12">
          <div class="text-center py-5">
            <div class="card shadow-winnipets-lg border-0" style="max-width: 500px; margin: 0 auto;">
              <div class="card-body py-5">
                <i class="bi bi-search display-1 text-muted mb-4"></i>
                <h3 class="text-winnipets-primary mb-3">No Products Found</h3>
                <p class="text-muted mb-4">
                  <% if params[:search].present? || params[:category_id].present? || params[:filter].present? %>
                    We couldn't find any products matching your current filters. Try adjusting your search criteria or browse our full catalog.
                  <% else %>
                    We're working hard to stock our shelves with amazing pet supplies. Check back soon!
                  <% end %>
                </p>

                <div class="d-flex flex-column flex-sm-row gap-2 justify-content-center">
                  <%= link_to "Browse All Products", products_path,
                             class: "btn btn-primary btn-lg" %>
                  <% if params[:search].present? || params[:category_id].present? || params[:filter].present? %>
                    <%= link_to "Clear All Filters", products_path,
                               class: "btn btn-outline-secondary btn-lg" %>
                  <% end %>
                </div>

                <!-- Suggested Categories -->
                <div class="mt-4">
                  <h6 class="text-winnipets-primary mb-3">Popular Categories</h6>
                  <div class="d-flex flex-wrap gap-2 justify-content-center">
                    <% Category.joins(:products).where(products: { is_active: true }).distinct.limit(4).each do |category| %>
                      <%= link_to products_path(category_id: category.id),
                                 class: "btn btn-outline-winnipets-primary btn-sm" do %>
                        <i class="bi bi-tag me-1"></i><%= category.name %>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

<!-- Custom CSS for Product Card Hover Effects -->
<style>
  .product-card:hover .opacity-0 {
    opacity: 1 !important;
  }

  .product-card .stretched-link::after {
    z-index: 0;
  }

  .product-card .btn {
    z-index: 1;
    position: relative;
  }

  .transition-opacity {
    transition: opacity 0.3s ease;
  }
</style>