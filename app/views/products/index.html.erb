<% content_for :title, "Shop Premium Pet Supplies - Winnipets" %>

<section class="py-5" id="products">
  <div class="container">
    <% if @products.any? %>
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <% if product.images.attached? %>
                <%= link_to product_path(product) do %>
                  <%= image_tag product.images.first, class: "card-img-top", style: "height: 250px; object-fit: cover;" %>
                <% end %>
              <% else %>
                <div class="card-img-top placeholder-image" style="height: 250px; background-color: #f8f9fa;"></div>
              <% end %>

              <div class="card-body d-flex flex-column">
                <h5 class="card-title">
                  <%= link_to product.name, product_path(product), class: "text-decoration-none" %>
                </h5>

                <p class="card-text text-muted small"><%= product.category.name %></p>

                <div class="mb-2">
                  <% if product.on_sale? %>
                    <span class="h5 text-danger"><%= number_to_currency(product.sale_price) %></span>
                    <span class="text-muted text-decoration-line-through ms-1"><%= number_to_currency(product.price) %></span>
                    <span class="badge bg-danger ms-1">Sale</span>
                  <% else %>
                    <span class="h5"><%= number_to_currency(product.price) %></span>
                  <% end %>
                </div>

                <p class="card-text flex-grow-1"><%= truncate(product.description, length: 100) %></p>

                <div class="mt-auto">
                  <% if product.stock_quantity > 0 %>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                      <small class="text-success">
                        <i class="fas fa-check-circle"></i> In Stock
                      </small>
                      <%= link_to "View Details", product_path(product), class: "btn btn-sm btn-outline-info" %>
                    </div>
                    <%= render 'shared/add_to_cart_simple', product: product %>
                  <% else %>
                    <p class="text-danger mb-2">
                      <i class="fas fa-times-circle"></i> Out of Stock
                    </p>
                    <button class="btn btn-sm btn-outline-secondary w-100" disabled>Out of Stock</button>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="bi bi-search display-1 text-muted"></i>
        <h3 class="mt-3">No Products Found</h3>
        <p class="text-muted">
          No matching products found.
        </p>
        <%= link_to "Browse All Products", products_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</section>
