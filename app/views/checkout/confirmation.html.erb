<div class="checkout-confirmation">
  <div class="container">
    <h1>Order Review</h1>
    <p class="lead">Please review your order details and confirm your purchase.</p>

    <div class="row">
      <!-- Order Items Section -->
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header">
            <h3>Order Items</h3>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th>Product</th>
                    <th>SKU</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                  </tr>
                </thead>
                <tbody>
                  <% @cart_items.each do |item| %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <% if item.image %>
                            <%= image_tag item.image, class: "me-3", style: "width: 50px; height: 50px; object-fit: cover;" %>
                          <% end %>
                          <div>
                            <strong><%= item.name %></strong>
                          </div>
                        </div>
                      </td>
                      <td><%= item.sku %></td>
                      <td><%= number_to_currency(item.unit_price) %></td>
                      <td><%= item.quantity %></td>
                      <td><%= number_to_currency(item.total_price) %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Shipping Information -->
        <div class="card mb-4">
          <div class="card-header">
            <h3>Shipping Information</h3>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <h5>Customer Details</h5>
                <p>
                  <strong><%= @guest_user.first_name %> <%= @guest_user.last_name %></strong><br>
                  <%= @guest_user.email %><br>
                  <%= @guest_user.phone %>
                </p>
              </div>
              <div class="col-md-6">
                <h5>Shipping Address</h5>
                <p>
                  <%= @address.address_line_1 %><br>
                  <% if @address.address_line_2.present? %>
                    <%= @address.address_line_2 %><br>
                  <% end %>
                  <%= @address.city %>, <%= @province.abbreviation %><br>
                  <%= @address.postal_code %><br>
                  Canada
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Order Summary Section -->
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h3>Order Summary</h3>
          </div>
          <div class="card-body">
            <!-- Subtotal -->
            <div class="d-flex justify-content-between mb-2">
              <span>Subtotal:</span>
              <span><%= number_to_currency(@subtotal) %></span>
            </div>

            <!-- Shipping -->
            <div class="d-flex justify-content-between mb-2">
              <span>Shipping:</span>
              <span>
                <% if @shipping_cost > 0 %>
                  <%= number_to_currency(@shipping_cost) %>
                <% else %>
                  <span class="text-success">FREE</span>
                <% end %>
              </span>
            </div>

            <hr>

            <!-- Tax Breakdown -->
            <h5>Taxes (<%= @province.name %>):</h5>
            <% if @province.gst_rate > 0 %>
              <div class="d-flex justify-content-between mb-1">
                <small>GST (<%= number_to_percentage(@province.gst_rate * 100, precision: 2) %>):</small>
                <small><%= number_to_currency(@gst_amount) %></small>
              </div>
            <% end %>

            <% if @province.pst_rate > 0 %>
              <div class="d-flex justify-content-between mb-1">
                <small>PST (<%= number_to_percentage(@province.pst_rate * 100, precision: 2) %>):</small>
                <small><%= number_to_currency(@pst_amount) %></small>
              </div>
            <% end %>

            <% if @province.hst_rate > 0 %>
              <div class="d-flex justify-content-between mb-1">
                <small>HST (<%= number_to_percentage(@province.hst_rate * 100, precision: 2) %>):</small>
                <small><%= number_to_currency(@hst_amount) %></small>
              </div>
            <% end %>

            <div class="d-flex justify-content-between mb-3">
              <span>Total Taxes:</span>
              <span><%= number_to_currency(@tax_amount) %></span>
            </div>

            <hr>

            <!-- Grand Total -->
            <div class="d-flex justify-content-between mb-3">
              <h4>Total:</h4>
              <h4 class="text-primary"><%= number_to_currency(@total_amount) %></h4>
            </div>

            <!-- Action Buttons -->
            <div class="d-grid gap-2">
              <%= form_with url: process_order_checkout_path, method: :post, local: true, id: "confirm-order-form" do |form| %>
                <%= form.submit "Place Order", class: "btn btn-primary btn-lg", id: "place-order-btn",
                                data: { disable_with: "Processing Order..." } %>
              <% end %>
              <%= link_to "Edit Cart", cart_path, class: "btn btn-outline-secondary" %>
              <%= link_to "Back to Checkout", new_checkout_path, class: "btn btn-outline-secondary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('confirm-order-form');
  const submitButton = document.getElementById('place-order-btn');

  if (form && submitButton) {
    form.addEventListener('submit', function(e) {
      // Disable the button to prevent double-clicks
      submitButton.disabled = true;
      submitButton.textContent = 'Processing Order...';

      // Re-enable after 10 seconds as a failsafe
      setTimeout(function() {
        if (submitButton.disabled) {
          submitButton.disabled = false;
          submitButton.textContent = 'Place Order';
        }
      }, 10000);
    });
  }
});
</script>

<style>
.checkout-confirmation {
  padding: 2rem 0;
}

.table th {
  border-top: none;
  font-weight: 600;
}

.card-header h3 {
  margin: 0;
  font-size: 1.25rem;
}

.text-primary {
  font-weight: bold;
}
</style>