<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <!-- Success Header -->
      <div class="text-center mb-5">
        <div class="mb-4">
          <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
        </div>
        <h1 class="text-success mb-3">Order Placed Successfully!</h1>
        <p class="lead">Thank you for your purchase. Your order has been received and is being processed.</p>
      </div>

      <!-- Order Details Card -->
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">
            <i class="fas fa-receipt me-2"></i>
            Order Details
          </h3>
        </div>
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-md-6">
              <strong>Order Number:</strong>
              <span class="text-primary"><%= @order.order_number %></span>
            </div>
            <div class="col-md-6">
              <strong>Order Date:</strong>
              <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-md-6">
              <strong>Status:</strong>
              <span class="badge bg-warning text-dark"><%= @order.status.humanize %></span>
            </div>
            <div class="col-md-6">
              <strong>Total Amount:</strong>
              <strong class="text-success fs-5"><%= number_to_currency(@order.total_amount) %></strong>
            </div>
          </div>
        </div>
      </div>

      <!-- Customer Information -->
      <div class="card mb-4">
        <div class="card-header">
          <h4 class="mb-0">
            <i class="fas fa-user me-2"></i>
            Customer Information
          </h4>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <p>
                <strong>Name:</strong><br>
                <%= @order.user.first_name %> <%= @order.user.last_name %>
              </p>
              <p>
                <strong>Email:</strong><br>
                <%= @order.user.email %>
              </p>
            </div>
            <div class="col-md-6">
              <% if @order.user.phone.present? %>
                <p>
                  <strong>Phone:</strong><br>
                  <%= @order.user.phone %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Shipping Address -->
      <% if @order.shipping_address %>
        <div class="card mb-4">
          <div class="card-header">
            <h4 class="mb-0">
              <i class="fas fa-truck me-2"></i>
              Shipping Address
            </h4>
          </div>
          <div class="card-body">
            <address>
              <%= @order.shipping_address.address_line_1 %><br>
              <% if @order.shipping_address.address_line_2.present? %>
                <%= @order.shipping_address.address_line_2 %><br>
              <% end %>
              <%= @order.shipping_address.city %>, <%= @order.shipping_address.province.abbreviation %><br>
              <%= @order.shipping_address.postal_code %><br>
              Canada
            </address>
          </div>
        </div>
      <% end %>

      <!-- Order Items -->
      <div class="card mb-4">
        <div class="card-header">
          <h4 class="mb-0">
            <i class="fas fa-shopping-bag me-2"></i>
            Order Items
          </h4>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>SKU</th>
                  <th>Price</th>
                  <th>Quantity</th>
                  <th class="text-end">Total</th>
                </tr>
              </thead>
              <tbody>
                <% @order.order_items.each do |item| %>
                  <tr>
                    <td>
                      <div class="d-flex align-items-center">
                        <% if item.product.images.attached? %>
                          <%= image_tag item.product.images.first,
                              class: "me-3",
                              style: "width: 50px; height: 50px; object-fit: cover;" %>
                        <% end %>
                        <div>
                          <strong><%= item.product_name %></strong>
                        </div>
                      </div>
                    </td>
                    <td><%= item.product_sku %></td>
                    <td><%= number_to_currency(item.unit_price) %></td>
                    <td><%= item.quantity %></td>
                    <td class="text-end"><%= number_to_currency(item.total_price) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Order Summary -->
      <div class="card mb-4">
        <div class="card-header">
          <h4 class="mb-0">
            <i class="fas fa-calculator me-2"></i>
            Order Summary
          </h4>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 offset-md-6">
              <div class="d-flex justify-content-between mb-2">
                <span>Subtotal:</span>
                <span><%= number_to_currency(@order.subtotal) %></span>
              </div>

              <% if @order.shipping_cost > 0 %>
                <div class="d-flex justify-content-between mb-2">
                  <span>Shipping:</span>
                  <span><%= number_to_currency(@order.shipping_cost) %></span>
                </div>
              <% else %>
                <div class="d-flex justify-content-between mb-2">
                  <span>Shipping:</span>
                  <span class="text-success">FREE</span>
                </div>
              <% end %>

              <!-- Tax Breakdown -->
              <% if @order.tax_amount > 0 %>
                <hr class="my-2">
                <h6>Taxes:</h6>
                <% if @order.gst_rate > 0 %>
                  <div class="d-flex justify-content-between mb-1">
                    <small>GST (<%= number_to_percentage(@order.gst_rate * 100, precision: 2) %>):</small>
                    <small><%= number_to_currency(@order.subtotal * @order.gst_rate) %></small>
                  </div>
                <% end %>
                <% if @order.pst_rate > 0 %>
                  <div class="d-flex justify-content-between mb-1">
                    <small>PST (<%= number_to_percentage(@order.pst_rate * 100, precision: 2) %>):</small>
                    <small><%= number_to_currency(@order.subtotal * @order.pst_rate) %></small>
                  </div>
                <% end %>
                <% if @order.hst_rate > 0 %>
                  <div class="d-flex justify-content-between mb-1">
                    <small>HST (<%= number_to_percentage(@order.hst_rate * 100, precision: 2) %>):</small>
                    <small><%= number_to_currency(@order.subtotal * @order.hst_rate) %></small>
                  </div>
                <% end %>
                <div class="d-flex justify-content-between mb-2">
                  <span>Total Taxes:</span>
                  <span><%= number_to_currency(@order.tax_amount) %></span>
                </div>
              <% end %>

              <hr>
              <div class="d-flex justify-content-between">
                <strong class="fs-5">Total:</strong>
                <strong class="fs-5 text-success"><%= number_to_currency(@order.total_amount) %></strong>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Next Steps -->
      <div class="card mb-4">
        <div class="card-header">
          <h4 class="mb-0">
            <i class="fas fa-info-circle me-2"></i>
            What's Next?
          </h4>
        </div>
        <div class="card-body">
          <ul class="list-unstyled">
            <li class="mb-2">
              <i class="fas fa-envelope text-primary me-2"></i>
              You will receive an email confirmation at <strong><%= @order.user.email %></strong>
            </li>
            <li class="mb-2">
              <i class="fas fa-clock text-info me-2"></i>
              Your order will be processed within 1-2 business days
            </li>
            <li class="mb-2">
              <i class="fas fa-shipping-fast text-success me-2"></i>
              You'll receive tracking information once your order ships
            </li>
            <li>
              <i class="fas fa-headset text-warning me-2"></i>
              Questions? Contact our support team with order #<%= @order.order_number %>
            </li>
          </ul>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="text-center mb-5">
        <div class="d-grid gap-2 d-md-block">
          <%= link_to "Continue Shopping", root_path,
              class: "btn btn-primary btn-lg me-3" %>
          <button onclick="window.print()" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-print me-2"></i>
            Print Receipt
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
@media print {
  .btn, .card-header { display: none !important; }
  .container { max-width: 100% !important; }
}
</style>