<style>
/* Color Variables */
:root {
  --winnipets-primary: #8B4513;
  --winnipets-primary-light: #A0522D;
  --winnipets-primary-dark: #654321;
  --winnipets-secondary: #6B8E60;
  --winnipets-secondary-light: #8FA688;
  --winnipets-accent: #5A7B8C;
  --winnipets-accent-light: #7A9BAC;
  --winnipets-cream: #F5F5DC;
  --winnipets-light-cream: #FEFEF8;
  --winnipets-warm-gray: #8B8680;
  --winnipets-text-dark: #2C2C2C;
  --winnipets-success: #4A7C4A;
  --winnipets-warning: #D4A574;
  --winnipets-danger: #B85450;
  --winnipets-info: #5A7B8C;
}

/* Typography */
body {
  font-family: 'Roboto', sans-serif;
  color: var(--winnipets-text-dark);
  background-color: var(--winnipets-light-cream);
  line-height: 1.6;
}

h1, h2, h3, h4, h5, h6 {
  font-family: 'Poppins', sans-serif;
  font-weight: 600;
  color: var(--winnipets-primary-dark);
  margin-bottom: 1rem;
}

/* Hero Section */
.hero-section {
  background: linear-gradient(135deg, var(--winnipets-primary-dark) 0%, var(--winnipets-primary) 70%, var(--winnipets-primary-light) 100%);
  min-height: 90vh;
  position: relative;
}

/* Dark overlay for better text contrast */
.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1;
}

.hero-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><polygon fill="rgba(255,255,255,0.03)" points="0,1000 1000,0 1000,1000"/></svg>');
  background-size: cover;
}

.hero-content {
  position: relative;
  z-index: 2;
}

.hero-title {
  color: #ffffff !important;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
  font-weight: 700;
}

.hero-text {
  color: #f8f9fa !important;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
  opacity: 0.95;
}

.hero-feature {
  color: #ffffff !important;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
}

.hero-feature span {
  color: #ffffff !important;
}

.min-vh-75 {
  min-height: 75vh;
}

.hero-image-placeholder {
  height: 400px;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 2px solid rgba(255, 255, 255, 0.2);
}

.scroll-indicator {
  position: absolute;
  bottom: 30px;
  left: 50%;
  transform: translateX(-50%);
  animation: bounce 2s infinite;
  z-index: 2;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateX(-50%) translateY(0);
  }
  40% {
    transform: translateX(-50%) translateY(-10px);
  }
  60% {
    transform: translateX(-50%) translateY(-5px);
  }
}

/* Button Styling */
.btn-primary {
  background-color: var(--winnipets-primary);
  border-color: var(--winnipets-primary);
  font-family: 'Poppins', sans-serif;
  font-weight: 600;
  border-radius: 8px;
  padding: 0.75rem 1.5rem;
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.btn-primary:hover,
.btn-primary:focus {
  background-color: var(--winnipets-primary-light);
  border-color: var(--winnipets-primary-light);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
}

.btn-outline-light {
  border: 2px solid rgba(255, 255, 255, 0.9);
  color: #ffffff;
  background: transparent;
}

.btn-outline-light:hover,
.btn-outline-light:focus {
  background-color: rgba(255, 255, 255, 0.9);
  color: var(--winnipets-primary-dark);
  border-color: rgba(255, 255, 255, 0.9);
}

.btn-outline-winnipets-primary {
  color: var(--winnipets-primary);
  border: 2px solid var(--winnipets-primary);
  background-color: transparent;
}

.btn-outline-winnipets-primary:hover,
.btn-outline-winnipets-primary:focus {
  background-color: var(--winnipets-primary);
  border-color: var(--winnipets-primary);
  color: white;
}

/* Category Cards */
.category-card {
  padding: 2rem 1.5rem;
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.category-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--winnipets-primary), var(--winnipets-secondary));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.category-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
}

.category-card:hover::before {
  opacity: 1;
}

.category-icon {
  width: 100px;
  height: 100px;
}

/* Feature Highlights */
.feature-highlight {
  padding: 2rem 1rem;
}

.feature-icon {
  width: 120px;
  height: 120px;
}

/* Newsletter */
.newsletter-form .form-control {
  border: none;
  background: rgba(255, 255, 255, 0.9);
}

.newsletter-form .form-control:focus {
  background: white;
  box-shadow: none;
}

.newsletter-form .btn-light {
  border: none;
  color: var(--winnipets-primary);
  font-weight: 600;
}

.newsletter-form .btn-light:hover {
  background: white;
  color: var(--winnipets-primary-dark);
}

/* Product Cards */
.product-card .card-img-top {
  transition: transform 0.3s ease;
}

.product-card:hover .card-img-top {
  transform: scale(1.05);
}

.product-card .card-title {
  color: var(--winnipets-primary-dark);
  font-weight: 600;
  font-size: 1.1rem;
}



/* Responsive Design */
@media (max-width: 768px) {
  .hero-section {
    min-height: 70vh;
  }

  .display-3 {
    font-size: 2.5rem;
  }

  .hero-image-placeholder {
    height: 300px;
    margin-top: 2rem;
  }

  .category-card {
    padding: 1.5rem 1rem;
  }

  .category-icon,
  .feature-icon {
