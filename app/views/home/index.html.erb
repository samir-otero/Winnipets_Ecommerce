<% content_for :title, "Winnipets - Premium Pet Supplies for Manitoba" %>

<!-- Hero Section -->
<section class="hero-section position-relative overflow-hidden">
  <div class="hero-background"></div>
  <div class="container">
    <div class="row align-items-center min-vh-75">
      <div class="col-lg-6">
        <div class="hero-content text-white">
          <h1 class="display-3 fw-bold mb-4">
            Premium Pet Care for
            <span class="text-warning">Manitoba</span> Families
          </h1>
          <p class="lead mb-4 opacity-90">
            From arctic winter gear to summer cooling mats, we provide quality pet supplies
            designed for Manitoba's unique climate. Trusted by pet families for over 8 years.
          </p>
          <div class="d-flex flex-column flex-sm-row gap-3 mb-4">
            <%= link_to "Shop All Products", products_path,
                       class: "btn btn-primary btn-lg px-5 py-3 fw-bold" %>
            <%= link_to "Winter Collection", products_path(category_id: 'winter'),
                       class: "btn btn-outline-light btn-lg px-5 py-3 fw-bold" %>
          </div>
          <div class="hero-features d-flex flex-wrap gap-4">
            <div class="d-flex align-items-center">
              <i class="bi bi-truck fs-4 me-2 text-warning"></i>
              <span class="fw-semibold">Free Shipping Over $50</span>
            </div>
            <div class="d-flex align-items-center">
              <i class="bi bi-geo-alt fs-4 me-2 text-warning"></i>
              <span class="fw-semibold">Local Manitoba Business</span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="hero-image-container">
          <div class="hero-image-placeholder rounded-3 shadow-lg d-flex align-items-center justify-content-center">
            <div class="text-center text-muted">
              <i class="bi bi-image display-1 mb-3"></i>
              <p class="h5">Hero Image Here</p>
              <p class="small">Happy pets in Manitoba winter scene</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="scroll-indicator">
    <i class="bi bi-chevron-down text-white"></i>
  </div>
</section>

<!-- Featured Categories -->
<section class="py-5 bg-white">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center mb-5">
        <h2 class="display-5 fw-bold text-winnipets-primary mb-3">
          Shop by Category
        </h2>
        <p class="lead text-muted">
          Everything your pet needs for Manitoba living
        </p>
      </div>
    </div>

    <div class="row g-4">
      <% [
        { name: "Winter Gear", icon: "snow", description: "Coats, boots & warming accessories", color: "accent" },
        { name: "Local Treats", icon: "heart-fill", description: "Manitoba-made natural treats", color: "secondary" },
        { name: "Grooming", icon: "brush", description: "Professional grooming supplies", color: "primary" },
        { name: "Outdoor Play", icon: "tree", description: "Toys & gear for prairie adventures", color: "success" }
      ].each do |category| %>
        <div class="col-lg-3 col-md-6">
          <div class="category-card h-100 text-center">
            <div class="category-icon bg-<%= category[:color] %> bg-opacity-10 rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center">
              <i class="bi bi-<%= category[:icon] %> fs-2 text-<%= category[:color] %>"></i>
            </div>
            <h4 class="fw-bold text-winnipets-primary mb-2"><%= category[:name] %></h4>
            <p class="text-muted mb-3"><%= category[:description] %></p>
            <%= link_to "Shop Now", products_path,
                       class: "btn btn-outline-winnipets-primary stretched-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Featured Products -->
<section class="py-5 bg-winnipets-light">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <div>
            <h2 class="display-6 fw-bold text-winnipets-primary mb-2">
              <i class="bi bi-star-fill me-2 text-warning"></i>Featured Products
            </h2>
            <p class="text-muted mb-0">Our most popular items this season</p>
          </div>
          <%= link_to "View All Products", products_path,
                     class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <div class="row g-4">
      <% (1..4).each do |i| %>
        <div class="col-lg-3 col-md-6">
          <div class="card h-100 shadow-winnipets product-card">
            <div class="position-relative overflow-hidden">
              <div class="card-img-top d-flex align-items-center justify-content-center bg-light"
                   style="height: 250px;">
                <div class="text-center text-muted">
                  <i class="bi bi-image fs-1 mb-2"></i>
                  <p class="small mb-0">Product Image <%= i %></p>
                </div>
              </div>
              <div class="position-absolute top-0 end-0 m-2">
                <span class="badge bg-danger fs-6">
                  <i class="bi bi-percent me-1"></i>Sale
                </span>
              </div>
            </div>

            <div class="card-body d-flex flex-column">
              <div class="mb-2">
                <span class="badge bg-secondary bg-opacity-10 text-winnipets-secondary">
                  <i class="bi bi-tag me-1"></i>Sample Category
                </span>
              </div>

              <h5 class="card-title text-winnipets-primary">
                Sample Product Name <%= i %>
              </h5>

              <div class="mb-3">
                <span class="h5 text-danger fw-bold">$29.99</span>
                <span class="text-muted text-decoration-line-through ms-2">$39.99</span>
              </div>

              <p class="card-text text-muted small flex-grow-1">
                High-quality pet supply designed specifically for Manitoba's climate conditions.
              </p>

              <div class="mt-auto">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <small class="text-success d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-1"></i>
                    <span class="fw-semibold">In Stock</span>
                  </small>
                </div>

                <button class="btn btn-primary w-100 fw-semibold">
                  Add to Cart
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Why Choose Us -->
